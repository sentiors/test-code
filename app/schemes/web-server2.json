{
    "lab_id": "web-server",
    "description": "This lab tests your ability to configure a web server.",
    "criteria": [
        {
            "type": "command",
            "key": "check_apache_installed",
            "description": "Check if Apache is installed.",
            "command": "apache2 -v",
            "expected": "Apache/2.4.41"
        },
        {
            "type": "file_exists",
            "key": "check_apache_config",
            "description": "Check if Apache configuration file exists.",
            "path": "/etc/apache2/apache2.conf",
            "expected": "exists"
        }
    ]
}
